<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayMessageActivity">

    <TextView
            android:text="@string/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView"
            android:textStyle="bold" android:textColor="@android:color/holo_blue_dark" android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>

    <com.example.myfirstapp.MyTestView
            android:background="#ccc"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:exampleDimension="24sp"
            app:exampleColor="#33b5e5"
            app:exampleString="Hello, MyTestView"
            app:exampleDrawable="@android:drawable/ic_menu_add"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView" android:padding="20dp"/>

</android.support.constraint.ConstraintLayout>